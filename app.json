{
	"id": "magic.home.wifi",
	"sdk": 2,
	"name": {
		"en": "Magic Home WiFi LED controller",
		"nl": "Magic Home WiFi LED controller"
	},
	"tags": {
		"en": [ "magic home", "LED", "controller", "ESP8266" ],
		"nl": [ "magic home", "LED", "controller", "ESP8266" ]
	},
	"version": "1.0.0",
	"compatibility": "1.x >=1.5.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com",
		"website": "https://github.com/jghaanstra/magic.home.wifi"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "jghaanstra"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/jghaanstra/magic.home.wifi/issues"
	},
  "homeyCommunityTopicId": 1750,
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"category": "lights",
	"description": {
		"en": "Control LED strips through the Magic Home LED controller",
		"nl": "Bestuur LED strips via de Magic Home LED controller"
	},
	"dependencies": {
		"net": "*"
	},
	"drivers": [
		{
			"id": "magichome",
			"name": {
				"en": "Magic Home LED Controller",
				"nl": "Magic Home LED controller"
			},
			"images": {
				"large": "drivers/magichome/assets/images/large.jpg",
				"small": "drivers/magichome/assets/images/small.jpg"
			},
			"class": "light",
			"capabilities": [
        "onoff",
        "light_temperature",
        "light_hue",
        "dim",
        "light_saturation",
        "light_mode"
			],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_magichome"
          }
        },
        {
          "id": "add_magichome",
          "template": "add_devices"
        }
      ]
		}
	],
  "flow": {
    "actions": [
      {
				"id": "colorAndWhite",
				"title": {
					"en": "Set color and white level",
					"nl": "Stel kleur en wit niveau in"
				},
				"args": [
          {
						"name": "color",
						"type": "color"
          },
          {
						"name": "white",
						"type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Magic Home Controller",
							"nl": "Selecteer Magic Home Controller"
						},
						"filter": "driver_id=magichome&capabilities=light_temperature"
          }
				]
			}
    ]
  }
}
